<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Clients</h1> 

  <div id="clients">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <%= render client %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "Add new client", new_client_path, class:"btn btn-secondary" %>

</div>



