<%#= render "form", client: @client %>


<%= form_with(model: @client) do |form| %>
  <% if @client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age, style: "display: block" %>
    <%= form.text_field :age %>
  </div>

   <div class="my-3">
     <%= form.label :movie_id, style: "display: block" %>
     <%= form.select :movie_id, options_for_select(@movies) %>    
    </div>

  <div class="btn btn-secondary mb-3">
    <%= form.submit%>
  </div>
<% end %>

<div>
  <%= link_to "Show this client", @client, class: "btn btn-success" %>
  <%= link_to "Back to clients", clients_path, class:"btn btn-secondary" %>
</div>
